<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatisplus.mapper.BookMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mybatisplus.entity.Book">
        <id column="book_id" property="bookId" />
        <result column="book_name" property="bookName" />
        <result column="book_writer" property="bookWriter" />
        <result column="book_publish" property="bookPublish" />
        <result column="book_status" property="bookStatus" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        book_id, book_name, book_writer, book_publish, book_status
    </sql>

</mapper>
